public class HeapSort {

    // heapify a subtree, where is the index of the root of the array
    public void heapify (int[] arr, int i) {

	int largest = i;
	int l = 2*i + 1;
	int r = 2*1 + 2;

	if ((r < arr.length) && (arr[r] > arr[largest])) {
	    largest = r;
	}

    }





} // end of class
